{
    "name": "crypto-exchange/backend",
    "description": "Crypto Exchange Backend API with Slim Framework",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "firebase/php-jwt": "^6.10",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public"
    }
}
